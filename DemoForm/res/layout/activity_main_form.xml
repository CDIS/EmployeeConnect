<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainForm" >

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="200dp"
        android:text="Name" />

    <TextView
        android:id="@+id/txtFname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editFname"
        android:layout_below="@+id/editFname"
        android:layout_marginTop="16dp"
        android:text="First" />

    <TextView
        android:id="@+id/txtMname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtFname"
        android:layout_alignBottom="@+id/txtFname"
        android:layout_alignLeft="@+id/editMname"
        android:text="Middle" />

    <TextView
        android:id="@+id/txtLname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtMname"
        android:layout_alignBottom="@+id/txtMname"
        android:layout_alignLeft="@+id/editLname"
        android:text="Last" />

    <TextView
        android:id="@+id/txtEmpCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtName"
        android:layout_below="@+id/txtFname"
        android:layout_marginTop="16dp"
        android:text="Emp Code" />

    <TextView
        android:id="@+id/txtPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtEmpCode"
        android:layout_below="@+id/txtEmpCode"
        android:layout_marginTop="15dp"
        android:text="Phone" />

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtPhone"
        android:layout_below="@+id/txtPhone"
        android:layout_marginTop="16dp"
        android:text="Email" />

    <TextView
        android:id="@+id/txtDOB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtEmail"
        android:layout_below="@+id/txtEmail"
        android:layout_marginTop="14dp"
        android:text="DOB" />

    <TextView
        android:id="@+id/txtBloodGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtDOB"
        android:layout_below="@+id/txtDOB"
        android:layout_marginTop="14dp"
        android:text="Blood group" />

    <EditText
        android:id="@+id/editFname"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/txtEmpCode"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editEmpCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtFname"
        android:layout_below="@+id/txtFname"
        android:ems="10" />

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtEmail"
        android:layout_alignLeft="@+id/editPhone"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/editDOB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtDOB"
        android:layout_alignLeft="@+id/editEmail"
        android:ems="10"
        android:inputType="date" />

    <EditText
        android:id="@+id/editPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editEmpCode"
        android:layout_below="@+id/editEmpCode"
        android:ems="10"
        android:inputType="phone" >
        
    </EditText>

    <EditText
        android:id="@+id/editBloodGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtBloodGroup"
        android:layout_alignLeft="@+id/editDOB"
        android:ems="10" />

    <EditText
        android:id="@+id/editLname"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editMname"
        android:layout_alignBottom="@+id/editMname"
        android:layout_alignRight="@+id/editEmpCode"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editMname"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editFname"
        android:layout_alignBottom="@+id/editFname"
        android:layout_marginLeft="28dp"
        android:layout_toRightOf="@+id/editFname"
        android:ems="10"
        android:inputType="textPersonName" />

</RelativeLayout>